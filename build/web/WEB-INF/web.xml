<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidaAdmin</servlet-name>
        <servlet-class>usuarios.ValidaAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearEncuesta</servlet-name>
        <servlet-class>controlador.CrearEncuesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PanelDeAdmin</servlet-name>
        <servlet-class>controlador.PanelDeAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarPreguntas</servlet-name>
        <servlet-class>controlador.AgregarPreguntas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContestarEncuesta</servlet-name>
        <servlet-class>controlador.ContestarEncuesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CargarPreguntasRespuestas</servlet-name>
        <servlet-class>controlador.CargarPreguntasRespuestas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidaAdmin</servlet-name>
        <url-pattern>/ValidaAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearEncuesta</servlet-name>
        <url-pattern>/CrearEncuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PanelDeAdmin</servlet-name>
        <url-pattern>/PanelDeAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarPreguntas</servlet-name>
        <url-pattern>/AgregarPreguntas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContestarEncuesta</servlet-name>
        <url-pattern>/ContestarEncuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargarPreguntasRespuestas</servlet-name>
        <url-pattern>/CargarPreguntasRespuestas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
